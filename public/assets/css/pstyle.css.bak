@import url('https://fonts.googleapis.com/css2?family=Georama:wght@300;400;500&display=swap');
*
{
    margin:0;
    
    font-family: 'Georama', sans-serif;
    box-sizing:border-box;
    text-transform: capitalize;
}
html
{
    font-size:15px;
    scroll-behavior: smooth;
}
html::-webkit-scrollbar
{
    width:.8rem;
}
html::-webkit-scrollbar-thumb
{
    background: rgb(216,213,213);
}
section
{
    min-height: 100vh;
    padding:1rem 10%;
    padding-top:8rem;
}
	
	h1 
	{
    display: block;
    font-size: 2em;
    margin-block-start: 0.67em;
    margin-block-end: 0.67em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
	}
}

@keyframes animate 
{
    0%
    {
        transform:translateX(-5px);
    }
    100% 
    {
        transform: translateX(5px);
    }
}
input[type="button" i] {
    appearance: auto;
    user-select: none;
    align-items: flex-start;
    text-align: center;
    cursor: default;
    box-sizing: border-box;
	border-image: initial;
	padding: 0.5rem 3rem;
    padding-top: 0.5rem;
    padding-right: 3rem;
    padding-bottom: 0.5rem;
    padding-left: 3rem;
	border-color:rgba(220, 88, 136, 0.1);
	border:solid;
	border-width:0.2rem;
	 border-radius: 5rem;
	 border-color:#df0606ab;
}

@keyframes animate-img
{
    0%,100%
    {
        transform: translateX(-3rem);
    }
    25%
    {
        transform: translateY(5rem);
    }
    50%
    {
        transform: translateX(3rem);
    }
    75%
    {
        transform: translateY(-5rem);
    }
}
/*----------------------Product---------------*/
.title
{
    
    font-size:2rem;
	border: solid;
	border-radius: 2rem;
    padding:0.5rem;
    color:rgb(39, 34, 36);
}
.title span
{
	text-align:right;
    color:gray;
}
.work-product .inner-product-row
{
   display: flex;
   align-items: center;
   justify-content:center;
   flex-wrap: wrap; 
}
.work-product .inner-product-col
{
    max-width: 1300px;
    background:#fff;
    height: 27rem;
    flex:1 1 20rem;
    padding:1.2rem;
    margin:1.5rem;
    border-radius:1rem;
    box-shadow:0 .3rem .6rem rgb(16, 15, 15, 0.24);
    text-align: center;
}
.work-product .inner-product-col img 
{
    height: 20rem;
    width:100%;
    object-fit: cover;
}


@media(max-width:768px)
{
    .title
    {
        text-align:right;
        font-size:2rem;
    }
}
	